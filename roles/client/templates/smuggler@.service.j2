# {{ ansible_managed }}

[Unit]
Description=Smuggler {{ tun.name }} Service
Documentation=https://github.com/vayzur
After=network-online.target
Wants=network-online.target
StartLimitIntervalSec=20
StartLimitBurst=10

[Service]
CPUAccounting=no
MemoryAccounting=no
IOAccounting=no
IPAccounting=no
TasksAccounting=no
CPUQuota=
MemoryMax=
CPUSchedulingPolicy=fifo
CPUSchedulingPriority=98
IOSchedulingClass=realtime
IOSchedulingPriority=0
LimitRTPRIO=99
LimitRTTIME=infinity
LimitNPROC=infinity
LimitNOFILE=infinity
LimitMEMLOCK=infinity
OOMScoreAdjust=-1000
ExecStart=/usr/local/bin/dnstt-client -{{ tun.client.dns_mode }} {{ tun.client.dns_resolver }} -pubkey-file {{ keys_path }}/{{ tun.name }}.pub {{ tun.domain }} {{ tun.client.bind_addr }}:{{ tun.client.bind_port }}
Restart=always
RestartSec=5
TimeoutStartSec=3

[Install]
WantedBy=multi-user.target
