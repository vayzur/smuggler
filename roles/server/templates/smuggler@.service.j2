# {{ ansible_managed }}

[Unit]
Description=Smuggler Service
Documentation=https://github.com/vayzur
After=network-online.target
Wants=network-online.target
StartLimitIntervalSec=20
StartLimitBurst=10

[Service]
CPUAccounting=no
MemoryAccounting=no
IOAccounting=no
IPAccounting=no
TasksAccounting=no
CPUQuota=
MemoryMax=
CPUSchedulingPolicy=fifo
CPUSchedulingPriority=98
IOSchedulingClass=realtime
IOSchedulingPriority=0
LimitRTPRIO=99
LimitRTTIME=infinity
LimitNPROC=infinity
LimitNOFILE=infinity
LimitMEMLOCK=infinity
OOMScoreAdjust=-1000
ExecStart=/usr/local/bin/dnstt-server -udp {{ tun.server.bind_addr }}:{{ tun.server.bind_port }} -mtu {{ tun.server.mtu }} -pubkey-file {{ keys_path }}/{{ (shared_privkey if lb_enabled else tun.name ~ '.key') }} {{ tun.domain }} {{ tun.server.forward_addr }}:{{ tun.server.forward_port }}
Restart=always
RestartSec=5
TimeoutStartSec=3

[Install]
WantedBy=multi-user.target
