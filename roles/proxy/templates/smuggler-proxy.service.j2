[Unit]
Description=Smuggler SSH proxy for DNSTT
Documentation=https://github.com/vayzur
After=network-online.target
Wants=network-online.target
StartLimitIntervalSec=20
StartLimitBurst=10

[Service]
CPUAccounting=no
MemoryAccounting=no
IOAccounting=no
IPAccounting=no
TasksAccounting=no
CPUQuota=
MemoryMax=
CPUSchedulingPolicy=fifo
CPUSchedulingPriority=98
IOSchedulingClass=realtime
IOSchedulingPriority=0
LimitRTPRIO=99
LimitRTTIME=infinity
LimitNPROC=infinity
LimitNOFILE=infinity
LimitMEMLOCK=infinity
OOMScoreAdjust=-1000
ExecStart=/usr/bin/ssh -T -N -D {{ dnstt_forward_addr }}:{{ dnstt_forward_port }} -o NoHostAuthenticationForLocalhost=yes {{ proxy.remote_host }} -p {{ proxy.remote_port }}
Restart=always
RestartSec=5
TimeoutStartSec=3

[Install]
WantedBy=multi-user.target
